generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model User {
  id     Int     @default(autoincrement()) @id
  name   String
  groups Group[] @relation("groups")
  alarms Alarm[]
  wakeUpGroup Group?
}

model Group {
  id     Int     @default(autoincrement()) @id
  name   String
  users  User[]
  alarms Alarm[]
}

model Alarm {
  id        Int     @default(autoincrement()) @id
  message   String
  group     Group
  user      User
}

model Track {
  id        Int     @default(autoincrement()) @id
}